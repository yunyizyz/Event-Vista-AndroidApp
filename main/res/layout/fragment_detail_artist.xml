<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artist_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/no_artist"
        android:visibility="gone"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/event_background"
        android:padding="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="   Artist/Music data unavailable"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"/>

    <ProgressBar
        android:id="@+id/loading2"
        android:progressDrawable="@drawable/circle_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="150dp"/>

</FrameLayout>