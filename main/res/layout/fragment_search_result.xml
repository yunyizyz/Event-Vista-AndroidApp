<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/back_to_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Search"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_baseline_arrow_back_24"
        android:drawablePadding="8dp"
        android:textSize="20sp"
        android:padding="16dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:id="@+id/fav_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DDDDDDD"
        android:textColor="@color/white"
        android:drawablePadding="8dp"
        android:textSize="40sp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="200dp"
        android:clickable="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:scrollbars="vertical"
        android:layout_below="@id/back_to_search"/>

    <TextView
        android:id="@+id/no_event"
        android:visibility="gone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/event_background"
        android:padding="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="                No event found"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"/>

    <ProgressBar
        android:id="@+id/loading1"
        android:progressDrawable="@drawable/circle_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="150dp"/>


</FrameLayout>